<div class="container">


<h4 class="mt-3">Welcome Back! Please sign in:</h4>


<%= form_for :session, url: session_path do |f| %>

  <div class="input-group mb-1">
    <%= f.label :email, class: "input-group-addon" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  <div class="input-group mb-1">
    <%= f.label :password, class: "input-group-addon" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <%= f.submit 'Sign In', class: "btn btn-outline-secondary btn-sm" %>

  <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
    <small> Remember me </small> 
  <% end %>

  <small>
    <%= link_to 'Forget password? click here', new_password_reset_path, class: "text-secondary ml-3" %>
  </small>
<% end %>


</div>
