<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title || "Life+" %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-danger">
      <a class="navbar-brand" href="/">Life+ </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/posts/new">New Post</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/posts">All Posts</a>
          </li>
        </ul>
        <!-- <form class="form-inline my-2 my-lg-0">
          <input class="form-control-sm mr-sm-2" style="border:none" type="text" placeholder="Search">

          <button class="btn btn-secondary btn-sm my-2 my-sm-0 mr-2"  style="border:none" type="submit">Go</button>
        </form> -->
        <%= form_tag search_posts_path, method: "get", class: "form-inline my-2 my-lg-0" do %>
          <p>
            <%= text_field_tag :search, params[:search], class: "form-control-sm mr-sm-2", style:"border:none;" %>
            <%= submit_tag "Find Post", :name => nil, class: "btn btn-secondary btn-sm my-2 my-sm-0 mr-2", style: "border:none" %>
          </p>
        <% end %>

        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
                <%=link_to current_user.first_name, edit_user_path(current_user), class: "nav-link"%>
            </li>
            <% if current_user.is_admin? %>
              <li class="nav-item">
              <%= link_to 'Dashboard', admin_dashboard_index_path, class: "nav-link" %>
              </li>
            <% end %>

            <li class="nav-item">
                <%= link_to(
                  'Sign Out',
                  session_path,
                  class: "nav-link",
                  method: :delete,
                  data: {confirm: 'Sign out?'}
                ) %>
            </li>

          <% else %>
            <li class="nav-item">
                <%= link_to 'Sign In', new_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to 'Sign Up', new_user_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="container">
       <% if flash[:notice].present? %>
         <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
           <%= flash[:notice] %>
           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
             <span aria-hidden="true">&times;</span>
           </button>
         </div>
       <% elsif flash[:alert].present? %>
         <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
           <%= flash[:alert] %>
           <button type="button" class="close" data-dismiss="alert" aria-label="Close">
             <span aria-hidden="true">&times;</span>
           </button>
         </div>
       <% end %>
  </div>

   <%= yield %>

   <div class="footer text-right">
      <p>
        <a href="https://www.facebook.com/" target="blank">
            <i class="fa fa-facebook-official fa-lg text-dark" aria-hidden="true"></i>
        </a>
        <a href="https://twitter.com/" target="blank">
          <i class="fa fa-twitter-square fa-lg text-dark" aria-hidden="true"></i>
        </a>
        <a href="https://github.com" target="blank">
          <i class="fa fa-github fa-lg text-dark" aria-hidden="true"></i>
        </a>
        <a href="https://slack.com/" target="blank">
          <i class="fa fa-slack fa-lg text-dark" aria-hidden="true"></i>
        </a>
      </p>
    </div>

  </body>
</html>
