<div class="container">

  <p class="text-right"><small>Post Counts: <%= @post_count %> </small></p>

<h5 class="mt-2">Random post:</h5>
  <div class="row">
    <div class="col-sm-8 card p-0" style="box-shadow: 2px 3px 10px;">
      <img class="card-img-top" src="https://images.pexels.com/photos/245037/pexels-photo-245037.jpeg?w=940&h=650&auto=compress&cs=tinysrgb" >
      <div class="card-body">
        <h4 class="card-title"><%= @ramdom_post.title %></h4>
        <p class="text-right"><small>updated at:<%= time_ago_in_words(@ramdom_post.updated_at) %> ago</small></p>
        <p class="card-text">
          <% if @ramdom_post.body.split(' ').length < 20 %>
            <%= @ramdom_post.body %>
          <% else %>
            <%= @ramdom_post.body.split(' ').take(20).join(" ") + " ..." %>
          <% end %>
        </p>
        <p class="text-right">
          <%= link_to "... More", post_path(@ramdom_post), class:"btn btn-secondary btn-sm", style:"background-color:#5e0231; border:none;" %>
        </p>
      </div>
    </div>

    <div class="col-sm-4">
      <h4>Most Liked:</h4>
      <p>To be built...</p>
    </div>
  </div>

  <div class="row mt-3">
  <% @posts.each do |post| %>
    <div class="col-md-4 card my-1 p-0 ">
      <img class="card-img-top" src="https://images.pexels.com/photos/46024/pexels-photo-46024.jpeg?w=940&h=650&auto=compress&cs=tinysrgb" >
      <div class="card-body">
        <h4 class="card-title"><%= post.title %></h4>
        <p class="text-right"><small>updated at:<%= time_ago_in_words(post.updated_at) %> ago</small></p>
        <p class="card-text">
          <% if post.body.split(' ').length < 20 %>
            <%= post.body %>
          <% else %>
            <%= post.body.split(' ').take(20).join(" ") + " ..." %>
          <% end %>
        </p>
        <p class="text-right">
          <%= link_to "... More", post_path(post), class:"btn btn-secondary btn-sm", style:"background-color:#5e0231; border:none;" %>
        </p>
      </div>
    </div>
    <% end %>

  </div>

  <div class="mt-2 float-right">
    <%= paginate @posts %>
  </div>

</div>
