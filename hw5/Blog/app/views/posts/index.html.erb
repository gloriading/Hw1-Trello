

<h2 class="mt-2">All Posts</h2>

<p class="text-right"><small>Post Counts: <%= @post_count %> </small></p>
<% @posts.each do |post| %>
<ul class="list-group mb-1">
  <%= link_to post.title, post_path(post), class: "list-group-item list-group-item-action list-group-item-dark" %>
</ul>
<% end %>

<div class="mt-2 float-right">
  <%= paginate @posts%>
</div>
