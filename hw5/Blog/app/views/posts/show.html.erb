<h2><%= @post.title %> </h2>
<p><%= @post.body %> </p>
<hr>

<p><strong>Created At:</strong> <%= @post.created_at %></p>
<p><strong>Update At:</strong> <%= @post.updated_at %></p>

<br>
<%= link_to 'Edit', edit_post_path(@post) %>

<%= link_to(
     'Delete',
     post_path(@post),
     method: :delete,
     data: {confirm: 'Are you sure?'}
   )
%>
