<h2><%= @post.title %> </h2>
<p>By <%= @post.user&.full_name || "[deleted]" %></p>
<p><%= @post.body %> </p>

<hr>

<p><strong>Created At:</strong> <%= @post.created_at.to_date.strftime('%a, %e %b %Y') %></p>
<p><strong>Update At:</strong> <%= @post.updated_at.to_date.strftime('%a, %e %b %Y') %></p>

<br>
<% if can?(:manage, @post) %>
  <%= button_to "EDIT", edit_post_path(@post), :method => "get" %>
  <%= button_to "DELETE", post_path(@post), :method => "delete",
  data: {confirm: 'Are you sure?'} %>
<% end %>
