<h3 class="mt-3">Change Your Password:</h3>

<%= form_tag edit_password_path do %>
  <div>
    <%= label_tag :current_password %>
    <%= password_field_tag :current_password %>
  </div>
  <div>
    <%= label_tag :new_password %>
    <%= password_field_tag :new_password %>
  </div>
  <div>
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation %>
  </div>
  <br>
    <%= submit_tag 's u b m i t' %>
<% end %>
