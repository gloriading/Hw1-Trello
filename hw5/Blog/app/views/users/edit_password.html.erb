<h3 class="mt-3">Change Your Password:</h3>

<%= form_tag update_password_users_path, method: :patch do %>
  <div class="input-group mb-1">
    <%= label_tag :current_password,nil, class: "input-group-addon" %>
    <%= password_field_tag :current_password, nil, class: "form-control" %>
  </div>
  <div class="input-group mb-1">
    <%= label_tag :new_password,nil, class: "input-group-addon" %>
    <%= password_field_tag :new_password, nil, class: "form-control" %>
  </div>
  <div class="input-group mb-1">
    <%= label_tag :password_confirmation,nil, class: "input-group-addon" %>
    <%= password_field_tag :password_confirmation, nil, class: "form-control" %>
  </div>
  <br>
    <%= submit_tag 'Submit', class: "btn btn-outline-danger btn-sm" %>
<% end %>
