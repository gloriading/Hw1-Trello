<div class="container">


<h3 class="mt-3">Edit your information:</h3>


<%= form_for @user do |f| %>
  <% if @user.errors.present? %>
    <p>
      <%= @user.errors.full_messages.join(', ') %>
    </p>
  <% end %>

  <div class="input-group mb-1">
    <%= f.label :first_name, class: "input-group-addon" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="input-group mb-1">
    <%= f.label :last_name, class: "input-group-addon" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="input-group mb-1">
    <%= f.label :email, class: "input-group-addon" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <%= f.submit 'Submit', class: "btn btn-outline-success btn-sm" %>
<% end %>

<%= link_to 'Change Password', edit_password_users_path(current_user), class: "btn btn-outline-danger btn-sm mt-3 float-right"%>

</div>
